title Celo SDK Decomposition

actor user

participant "@celo/sdk"
participant "@celo/provider"
participant "@celo/wallet"
participant "@celo/contracts"

user->"@celo/sdk":config(node-url,wallet-url?,contracts?)
"@celo/sdk"->"@celo/provider":init(node-url,wallet-url?)
"@celo/provider"->"@celo/wallet":init(wallet-url)
"@celo/provider"<--"@celo/wallet":wallet
"@celo/sdk"<--"@celo/provider":provider{rpc-caller,wallet?}
"@celo/sdk"->"@celo/contracts":init(rpc-caller)
"@celo/sdk"<--"@celo/contracts":contracts
user<--"@celo/sdk":sdk{provider,contracts?}

user->"@celo/provider":provider.rpc-caller.getLatestBlock()
user<--"@celo/provider":100

user->"@celo/provider":provider.rpc-caller.getBlock(100)
user<--"@celo/provider":block{headers,tx-receipts}

user->"@celo/contracts":contracts.parse(tx-receipt)
user<--"@celo/contracts":call-details?,logs?

user->"@celo/contracts":contracts.election.vote(...)
user<--"@celo/contracts":vote-tx

user->"@celo/provider":rpc-caller.send(vote-tx)
"@celo/provider"->"@celo/wallet":wallet.sign(vote-tx)
"@celo/provider"<--"@celo/wallet":signed-vote-tx
user<--"@celo/provider":tx-receipt

user->"@celo/wallet":wallet.sign(vote-tx)
user<--"@celo/wallet":signed-vote-tx
